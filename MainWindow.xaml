<Window x:Class="AIEnv.Container.Simple.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="AIEnv Integrated Container" 
        Height="700" Width="1000"
        MinHeight="600" MinWidth="800"
        WindowStartupLocation="CenterScreen">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Top Security Bar -->
        <Border Grid.Row="0" Background="#FF0078D4" Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Security Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="🔒" FontSize="16" Margin="0,0,5,0" />
                    <TextBlock Text="AIR-GAPPED MODE" 
                               Foreground="White" 
                               FontWeight="Bold" 
                               FontSize="12" 
                               VerticalAlignment="Center" />
                    <Border Background="#FF107C10" 
                            CornerRadius="3" 
                            Padding="6,2" 
                            Margin="10,0,0,0">
                        <TextBlock Text="SECURE" 
                                   Foreground="White" 
                                   FontSize="10" 
                                   FontWeight="SemiBold" />
                    </Border>
                </StackPanel>

                <!-- User Info -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center" Margin="20,0">
                    <TextBlock Text="👤" FontSize="14" Margin="0,0,5,0" />
                    <TextBlock x:Name="UserNameText"
                               Text="Windows User" 
                               Foreground="White" 
                               FontSize="12" 
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Navigation Panel -->
            <Border Grid.Column="0" 
                    Background="#FFF8F9FA" 
                    BorderBrush="#FFE1E5E9" 
                    BorderThickness="0,0,1,0"
                    Padding="10">
                <StackPanel>
                    <TextBlock Text="Navigation" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10" />

                    <Button Content="🏠 AIEnv Main" 
                            Click="LaunchAIEnv_Click"
                            Style="{StaticResource AIEnvButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,5" />

                    <Button Content="💬 AI Chat" 
                            Click="ShowChat_Click"
                            Style="{StaticResource AIEnvButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,5" />

                    <Button Content="🔧 Settings" 
                            Click="ShowSettings_Click"
                            Style="{StaticResource AIEnvButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,5" />

                    <Separator Margin="0,15" />

                    <TextBlock Text="Security" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10" />

                    <Button Content="🛡️ Security Status" 
                            Click="ShowSecurity_Click"
                            Style="{StaticResource AIEnvButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,5" />

                    <Button Content="📊 Audit Logs" 
                            Click="ShowAuditLogs_Click"
                            Style="{StaticResource AIEnvButtonStyle}"
                            HorizontalAlignment="Stretch"
                            Margin="0,5" />

                    <Separator Margin="0,15" />

                    <TextBlock Text="BERT AI" 
                               FontSize="16" 
                               FontWeight="Bold" 
                               Margin="0,0,0,10" />

                    <Border Background="#FF107C10" 
                            CornerRadius="3" 
                            Padding="8,4" 
                            Margin="0,10">
                        <TextBlock Text="READY (Demo)" 
                                   Foreground="White" 
                                   FontSize="10" 
                                   FontWeight="SemiBold" 
                                   HorizontalAlignment="Center" />
                    </Border>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <Grid Grid.Column="1">
                <!-- Welcome Screen -->
                <Border x:Name="WelcomeScreen" Background="White" Padding="40">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <TextBlock Text="🔒" FontSize="64" HorizontalAlignment="Center" Margin="0,0,0,20" />
                        
                        <TextBlock Text="AIEnv Integrated Container" 
                                   FontSize="24" 
                                   FontWeight="Bold" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,10" />
                        
                        <TextBlock Text="Secure Air-Gapped AI Development Environment" 
                                   FontSize="16" 
                                   Foreground="#FF666666" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,0,0,30" />

                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,20">
                            <Border Background="#FF107C10" CornerRadius="12" Padding="8,4" Margin="5">
                                <TextBlock Text="🔒 Air-Gapped" Foreground="White" FontSize="11" FontWeight="SemiBold" />
                            </Border>
                            <Border Background="#FF107C10" CornerRadius="12" Padding="8,4" Margin="5">
                                <TextBlock Text="🤖 BERT AI" Foreground="White" FontSize="11" FontWeight="SemiBold" />
                            </Border>
                            <Border Background="#FF107C10" CornerRadius="12" Padding="8,4" Margin="5">
                                <TextBlock Text="🛡️ Secure" Foreground="White" FontSize="11" FontWeight="SemiBold" />
                            </Border>
                        </StackPanel>

                        <Button Content="Launch AIEnv" 
                                Click="LaunchAIEnv_Click"
                                Style="{StaticResource AIEnvButtonStyle}"
                                FontSize="16"
                                Padding="20,10" />

                        <TextBlock Text="Welcome to the AIEnv Secure Containerized Integration. All systems are ready and operating in secure air-gapped mode with local BERT AI processing." 
                                   FontSize="12" 
                                   Foreground="#FF666666" 
                                   HorizontalAlignment="Center" 
                                   Margin="0,20,0,0" 
                                   TextWrapping="Wrap"
                                   MaxWidth="400" />
                    </StackPanel>
                </Border>

                <!-- AIEnv Integration Host -->
                <Border x:Name="AIEnvHostBorder"
                        Visibility="Collapsed"
                        Background="White">
                    <TextBlock Text="AIEnv Interface will be loaded here"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Foreground="#FF666666" />
                </Border>
            </Grid>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="#FFF8F9FA" 
                BorderBrush="#FFE1E5E9" 
                BorderThickness="0,1,0,0"
                Padding="10,5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           x:Name="StatusText"
                           Text="Ready - AIEnv Integrated Container" 
                           FontSize="12" 
                           VerticalAlignment="Center" />

                <TextBlock Grid.Column="1" 
                           Text="🔒 Air-Gapped" 
                           FontSize="12" 
                           VerticalAlignment="Center" 
                           Margin="20,0" />

                <TextBlock Grid.Column="2" 
                           x:Name="TimeText"
                           FontSize="12" 
                           VerticalAlignment="Center" />
            </Grid>
        </Border>
    </Grid>
</Window>
